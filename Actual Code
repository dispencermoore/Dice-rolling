// i/o example

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main ()
{
 int i;
 int d;
 srand(time(0));
 d = 0;
 cout << "Please enter the number of dice: ";
 cin >> i;
 for( int a = 0; a < i ; a = a + 1 ) {
 d = (rand() % 6 + 1) + d;
 }

 cout << "The value you entered is " << i;
 cout << " and the sum of all dice is " << d*1 << ".\n";
 return 0;
}
